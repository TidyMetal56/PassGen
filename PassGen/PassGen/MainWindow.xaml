<Window x:Class="PassGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassGen"
        mc:Ignorable="d"
        Title="PassGen" Height="450" Width="413" Background="#FF100F0F"
        ResizeMode="NoResize" 
        FontFamily="Segoe UI Semibold" Foreground="White" 
        WindowStyle="None" AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!--Grid encargado de remplazar la barra de tareas-->
        <Grid Grid.Row="0" Background="#FF0E0C0C">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <Canvas Grid.Column="0" MouseLeftButtonDown="Header_MouseLeftButtonDown"/>

            <Canvas Grid.Column="1">
                <Button Name="Min" Content="_" HorizontalAlignment="Center" VerticalAlignment="Top" Width="25" Height="30" Background="{x:Null}" FontSize="14" BorderBrush="{x:Null}" Foreground="White" FontFamily="Artifakt Element Black" Click="Min_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="gray"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Canvas>


            <Canvas Grid.Column="2">
                <Button Name="Close" Content="X" HorizontalAlignment="Center" VerticalAlignment="Top" Width="25" Height="30" Background="{x:Null}" FontSize="14" BorderBrush="{x:Null}" Foreground="White" FontFamily="Artifakt Element Black" Click="Close_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#FF801818"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Canvas>
        </Grid>

        <Canvas Grid.Row="1" Background="#FF1F1C1C" Margin="0,0,0,-16" Grid.RowSpan="3">
            <Label Content="PassGen" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="175" Canvas.Top="90" FontSize="24" Background="{x:Null}" FontFamily="Bahnschrift Light Condensed">
                <Label.Effect>
                    <DropShadowEffect/>
                </Label.Effect>
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0.938"/>
                        <GradientStop Color="#FFD58E70" Offset="0.569"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
            <CheckBox Name="chkEsp" Content="Incluide Especial characters?" Canvas.Left="28" Canvas.Top="207" HorizontalAlignment="Center" VerticalAlignment="Top" Background="White" Foreground="White" FontFamily="Bahnschrift Condensed" FontSize="14"/>
            <CheckBox Name="chkNum" Content="Incluide Numeric characters?" Canvas.Left="28" Canvas.Top="180" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Bahnschrift Condensed" FontSize="14"/>

            <TextBox Name="Nbox" TextWrapping="Wrap" Width="39" Canvas.Left="28" Canvas.Top="150" HorizontalAlignment="Center" VerticalAlignment="Top" PreviewTextInput="NumeroTextBox_PreviewTextInput" TextChanged="Nbox_TextChanged" Height="22" BorderThickness="0,0,0,0" FontFamily="Arial Rounded MT Bold" FontSize="14">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <!-- Borde redondeado con sombra -->
                        <Border x:Name="Border" BorderBrush="Black" BorderThickness="1" Background="{TemplateBinding Background}" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="5" Color="Black" Direction="315" BlurRadius="10"/>
                            </Border.Effect>

                            <!-- Permitir la entrada de texto -->
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Cambiar color al pasar el mouse -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightGray"/>
                                <Setter Property="Cursor" Value="IBeam"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>

            <TextBox Name="Pass" TextWrapping="Wrap" Width="186" RenderTransformOrigin="0.5,0.5" Canvas.Left="30" Canvas.Top="328" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" TextChanged="TextBox_TextChanged" FontFamily="Arial Rounded MT Bold" IsReadOnly="True">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <!-- Borde redondeado con sombra -->
                        <Border x:Name="Border" BorderBrush="Black" BorderThickness="1" Background="{TemplateBinding Background}" CornerRadius="0,1,1,10">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="5" Color="Black" Direction="315" BlurRadius="10"/>
                            </Border.Effect>

                            <!-- Permitir la entrada de texto -->
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Cambiar color al pasar el mouse -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightGray"/>
                                <Setter Property="Cursor" Value="IBeam"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>



            <Button Content="Generate" Canvas.Left="30" Canvas.Top="251" RenderTransformOrigin="0.5,0.5" Height="76" Width="305" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontFamily="Bahnschrift Condensed" BorderThickness="0,0,0,0" Click="Button_Click" Foreground="White">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="5" Color="Black" Direction="100" BlurRadius="10"/>
                </Button.Effect>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1" CornerRadius="10,10,1,1">
                            <!-- Redondeo solo a las esquinas derecha -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Black"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <!-- Fondo del botón con gradiente -->
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF69440B" Offset="1"/>
                        <GradientStop Color="#FFEFAD49" Offset="0.732"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>



            <Button Content="Copy to clipboard" Canvas.Left="217" Canvas.Top="328" Height="48" Width="118" HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="0,0,0,0" Click="Button_Click_1" Foreground="White" FontFamily="Bahnschrift Condensed" FontSize="18">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="5" Color="Black" Direction="315" BlurRadius="10" />
                </Button.Effect>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1" CornerRadius="0,0,10,1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Cambiar el color de fondo al pasar el mouse -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Black"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <!-- Fondo del botón con gradiente -->
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFEFAD49" Offset="0.5"/>
                        <GradientStop Color="#FF885C19" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Label Content="number of characters" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="24" Canvas.Top="126" Foreground="White" FontSize="14" FontFamily="Bahnschrift Condensed"/>
            <Label Name="warning" Content="⚠ Please, introduce a number ⚠" Canvas.Left="67" Canvas.Top="151" HorizontalAlignment="Left" VerticalAlignment="Top" Width="224" Background="{x:Null}" Foreground="#FFCC1616" Visibility="Hidden"/>

            <Label Name="Copy" Content="✓" Canvas.Left="340" Canvas.Top="312" RenderTransformOrigin="0.48,0.567" FontSize="48" Foreground="#FF2B903A" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold"/>
            <Label Name="Copynt" Content="⚠ Theres Nothing to Copy ⚠" Canvas.Left="105" Canvas.Top="375" HorizontalAlignment="Left" VerticalAlignment="Center" Width="195" Background="{x:Null}" Foreground="#FFE62C2C" Visibility="Hidden"/>
            <Image Height="211" Canvas.Left="83" Canvas.Top="-74" Width="261" Source="/Icon.png" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="UniformToFill">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.226"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Canvas>
    </Grid>


</Window>
